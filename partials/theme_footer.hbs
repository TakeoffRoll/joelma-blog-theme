    <footer class="site-footer clearfix">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-lg-4">
                    <h3>{{t "About"}}</h3>
                    <p>Getting off the ground as an Airline Transport Pilot ðŸ›«</p>
                </div>
                {{#get "tags" limit="all" include="count.posts"}}
                    {{#if tags}}
                        <div class="col-sm-6 col-lg-4">
                            <h3>{{t "Tags"}}</h3>
                            <ul class="tags">
                                {{#foreach tags}}
                                    {{#if count.posts}}
                                        <li>
                                            <a href="{{url}}">{{name}}</a>
                                        </li>
                                    {{/if}}
                                {{/foreach}}
                            </ul>
                        </div>
                    {{/if}}
                {{/get}}
                <div class="col-sm-6 col-lg-4">
                    <h3>{{t "Latest posts"}}</h3>
                    <ul class="latest-posts">
                    {{#get "posts" limit="3"}}
                        {{#foreach posts}}
                        <li>
                            <h5><a href="{{url}}" title="{{title}}">{{title}}</a></h5>
                            <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}"><i class="fas fa-calendar-alt"></i> {{date format="DD MMM YYYY"}}</time>
                        </li>
                        {{/foreach}}
                    {{/get}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="container-fluid copyright">
            <div class="row">
                <div class="col-md-12 text-center">
                    <p class="copyright">{{t "Copyright"}} &copy; {{date format="YYYY"}}, <a href="{{@site.url}}">{{@site.title}}</a>.</p>
                </div>
            </div>
        </div>
    </footer>